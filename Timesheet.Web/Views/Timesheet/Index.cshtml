@model Timesheet.Web.Models.TimesheetModel
@{
    ViewBag.Title = "Timesheet";
}

<style>
    div.container {
        max-width: 1200px;
    }

    .overlay {
        background: #e9e9e9;
        left: 0;
        opacity: 0.5;
    }

    .radius5px {
        border-radius: 5px;
    }

    .custom-header {
        padding: 10px;
        background-color: black;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }

    .panel-body {
        border: 1px solid rgba(128, 128, 128, 0.45);
        border-radius: 5px;
    }
</style>
<div class="container">
    <div class="col-md-12" style="font-size: 30px;color: #f7a000;font-weight: bold;cursor: default;text-shadow: 2px 2px #ffa50045;text-align: center;margin: 2%;font-weight: unset;">TIMESHEET</div>
</div>
<div class="container" style="margin-top: 1%;">
    <div class="col-md-12">
        <div class="panel-default">
            <div class="panel-body" id="panelBody" style="border: 2px solid rgba(128, 128, 128, 0.45);">
                <div class="row col-md-12" style="margin-top: 2%;">
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Date of</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(i => i.DATE_OF, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row col-md-12" style="margin-top: 1%;">
                    <div class="col-md-12">
                        <div class="col-md-2"></div>
                        <div class="col-md-2">
                            <input type="radio" name="STATUS" value="Y" checked/>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <label for="name" class="control-label">ทำงานปกติ</label>
                        </div>
                        <div class="col-md-2">
                            <input type="radio" name="STATUS" value="N" />
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <label for="name" class="control-label">ลา</label>
                        </div>
                    </div>
                </div>
                <div class="row col-md-12" style="margin-top: 1%;">
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Job Code</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(i => i.JOB_CODE, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Job Code Name</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(i => i.JOB_CODE_NAME, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row col-md-12" style="margin-top: 1%;">
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Sub Job Code</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(i => i.SUB_JOB_CODE, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row col-md-12" style="margin-top: 1%;">
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Project Name</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(i => i.PROJECT_NAME, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Ticket No.</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(i => i.TICKET_NO, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row col-md-12" style="margin-top: 1%;">
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Work Hour</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(i => i.WORK_HOUR, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Work Location</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(i => i.WORK_LOCATION, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row col-md-12" style="margin-top: 1%;">
                    <div class="col-md-2 text-right">
                        <label for="name" class="control-label">Description</label>
                    </div>
                    <div class="col-md-3">
                        @Html.TextAreaFor(i => i.DESCRIPTION, new { @class = "form-control", @rows = "4" })
                    </div>
                </div>
                <div class="col-md-12" style="text-align: center; margin-top: 1%; margin-bottom: 1%">
                    <button type="button" id="btnAddToList" class="btn btn-success" style="padding: 4px 5px; width: 150px;"><i class="fa fa-plus"></i>&nbsp;Add To List</button>
                    <button type="button" id="btnClear" class="btn btn-primary" style="padding: 4px 5px; width: 150px;"><i class="fa fa-refresh"></i>&nbsp;Clear</button>
                </div>
            </div>
        </div>
        <div class="panel-default">
            <div class="panel-heading" style="background-color: gray !important; color: white; padding: 9px 15px 5px; margin-top: 1.5%; border-radius: 5px;">
                <i class="fa fa-list-ul"></i>&nbsp;LIST
            </div>
            <div class="panel-body">
                <table id="tableMyTimesheet" class="display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Date of</th>
                            <th>Job Code</th>
                            <th>Job Name</th>
                            <th>Project Name</th>
                            <th>Ticket No.</th>
                            <th>Assigner</th>
                            <th>Customer</th>
                            <th>Work Hour</th>
                            <th>Work Location</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            var Table = $('#tableMyTimesheet').DataTable({
