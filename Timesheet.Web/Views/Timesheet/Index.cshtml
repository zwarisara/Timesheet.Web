                    $('#JOB_CODE').val(),
                    $('#JOB_CODE_NAME').val(),
                    $('#SUB_JOB_CODE').val(),
                    $('#PROJECT_NAME').val(),
                    $('#TICKET_NO').val(),
                    $('#WORK_HOUR').val(),
                    $('#WORK_LOCATION').val(),
                    $('#DESCRIPTION').val()
                    
                ]).draw(false);

